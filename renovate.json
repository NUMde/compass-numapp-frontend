{
    "extends": [
        "config:recommended"
    ],
    "timezone": "Europe/Berlin",
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "automerge": true
        },
        {
            "groupName": "@react-native-firebase",
            "matchPackageNames": [
                "/@react-native-firebase/"
            ]
        }
    ],
    "schedule": [
        "after 6pm every weekday",
        "before 5am every weekday",
        "every weekend"
    ],
    "gradle": {
        "enabled": false
    },
    "gradle-wrapper": {
        "enabled": false
    },
    "github-actions": {
        "enabled": false
    },
    "cocoapods": {
        "enabled": false
    }
}
